<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/text_lon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_lon1_label"
            app:layout_constraintStart_toEndOf="@+id/text_lon1_label"
            app:layout_constraintTop_toTopOf="@+id/text_lon1_label"
            app:layout_constraintVertical_bias="1.0" />

    <TextView
            android:id="@+id/text_lat2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Latitude: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_second_loc_label" />

    <TextView
            android:id="@+id/text_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_time1_label"
            app:layout_constraintStart_toStartOf="@+id/text_lat1"
            app:layout_constraintTop_toTopOf="@+id/text_time1_label" />

    <TextView
            android:id="@+id/text_second_loc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="2nd Location: "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_time1_label" />

    <TextView
            android:id="@+id/text_lat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_lat1_label"
            app:layout_constraintStart_toEndOf="@+id/text_lat1_label"
            app:layout_constraintTop_toTopOf="@+id/text_lat1_label" />

    <TextView
            android:id="@+id/text_lon2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="Longitude: "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_lat2_label"
            app:layout_constraintStart_toEndOf="@+id/text_lat2_label"
            app:layout_constraintTop_toTopOf="@+id/text_lat2_label" />

    <TextView
            android:id="@+id/text_time2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=" Time:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/text_lat2_label"
            app:layout_constraintTop_toBottomOf="@+id/text_lon2_label" />

    <TextView
            android:id="@+id/text_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_time2_label"
            app:layout_constraintStart_toStartOf="@+id/text_lat2"
            app:layout_constraintTop_toTopOf="@+id/text_time2_label" />

    <TextView
            android:id="@+id/text_lat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_lat2_label"
            app:layout_constraintStart_toEndOf="@+id/text_lat2_label"
            app:layout_constraintTop_toTopOf="@+id/text_lat2_label" />

    <TextView
            android:id="@+id/text_lat1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Latitude: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_first_loc_label" />

    <TextView
            android:id="@+id/text_lon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_lon2_label"
            app:layout_constraintStart_toEndOf="@+id/text_lon2_label"
            app:layout_constraintTop_toTopOf="@+id/text_lon2_label" />

    <TextView
            android:id="@+id/text_lon1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="Longitude: "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_lat1_label"
            app:layout_constraintStart_toEndOf="@+id/text_lat1_label"
            app:layout_constraintTop_toTopOf="@+id/text_lat1_label" />

    <TextView
            android:id="@+id/text_time1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=" Time:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/text_lat1_label"
            app:layout_constraintTop_toBottomOf="@+id/text_lat1_label" />

    <TextView
            android:id="@+id/text_cur_pos_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Current Position"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/text_lat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Latitude: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_cur_pos_label" />

    <TextView
            android:id="@+id/text_first_loc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="1st Location: "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider5" />

    <TextView
            android:id="@+id/text_dir_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Direction: "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_speed_label"
            app:layout_constraintStart_toEndOf="@+id/divider6"
            app:layout_constraintTop_toTopOf="@+id/text_speed_label" />

    <TextView
            android:id="@+id/text_speed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Speed: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4" />

    <TextView
            android:id="@+id/text_last_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_lat_label"
            app:layout_constraintStart_toEndOf="@+id/text_lat_label"
            app:layout_constraintTop_toTopOf="@+id/text_lat_label" />

    <TextView
            android:id="@+id/text_lon_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="Longitude: "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_lat_label"
            app:layout_constraintStart_toStartOf="@+id/text_last_lat"
            app:layout_constraintTop_toTopOf="@+id/text_lat_label" />

    <TextView
            android:id="@+id/text_last_lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_lon_label"
            app:layout_constraintStart_toEndOf="@+id/text_lon_label"
            app:layout_constraintTop_toTopOf="@+id/text_lon_label" />


    <TextView
            android:id="@+id/text_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Position Time:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_lon_label" />

    <TextView
            android:id="@+id/text_time_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accuracy:"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_time_label"
            app:layout_constraintStart_toStartOf="@+id/text_lon_label"
            app:layout_constraintTop_toTopOf="@+id/text_time_label" />

    <TextView
            android:id="@+id/text_last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_time_label"
            app:layout_constraintStart_toEndOf="@+id/text_time_label"
            app:layout_constraintTop_toTopOf="@+id/text_time_label" />

    <Button
            android:id="@+id/start_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/btn_rnd_grn"
            android:onClick="startButtonClick"
            android:text="Start"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_time2_label" />

    <TextView
            android:id="@+id/text_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="?"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/divider6"
            app:layout_constraintTop_toBottomOf="@+id/text_dir_label" />

    <TextView
            android:id="@+id/text_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="?"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_speed_label" />

    <TextView
            android:id="@+id/text_last_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            app:layout_constraintBottom_toBottomOf="@+id/text_time_label2"
            app:layout_constraintStart_toStartOf="@+id/text_last_lon"
            app:layout_constraintTop_toTopOf="@+id/text_time_label2" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="(You can also use volume down key)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent" />

    <View
            android:id="@+id/divider4"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_time_label2" />

    <View
            android:id="@+id/divider5"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_dir" />

    <View
            android:id="@+id/divider6"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/divider5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4" />


</androidx.constraintlayout.widget.ConstraintLayout>